@using YakShop.Common.Models
@model List<Order>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div>
    <h3>Orders</h3>
</div>
<table class="table table-responsive table-bordered panel-primary">
    <thead>
    <th>Name</th>
    <th>Details</th>
    @*<th></th>*@
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.Customer)</td>
                    <td>
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Order</h4>
                            </div>
                            <div class="col-md-3">
                                <h5>Milk:</h5>
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => item.Milk)
                            </div>
                            <div class="col-md-3">
                                <h5>Skin:</h5>
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => item.Skin)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Fullfilled</h4>
                            </div>
                            <div class="col-md-3">
                                <h5>Milk:</h5>
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => item.FullfilledMilk)
                            </div>
                            <div class="col-md-3">
                                <h5>Skin:</h5>
                            </div>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => item.FullfilledSkin)
                            </div>
                        </div>
                    </td>
                </tr>

            }
    </tbody>
</table>
